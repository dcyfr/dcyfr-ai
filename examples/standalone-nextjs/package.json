{
  "name": "dcyfr-ai-standalone-example",
  "version": "1.0.0",
  "description": "Standalone Next.js app demonstrating @dcyfr/ai framework",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "validate": "node scripts/validate.js",
    "telemetry:report": "node scripts/telemetry-report.js"
  },
  "dependencies": {
    "@dcyfr/ai": "^1.0.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.0",
    "typescript": "^5.3.0"
  },
  "dcyfr": {
    "version": "1.0.0",
    "projectName": "standalone-example",
    "telemetry": {
      "enabled": true,
      "storage": "file"
    },
    "validation": {
      "enabled": true,
      "parallel": true,
      "gates": [
        {
          "name": "typescript",
          "plugins": ["typescript-compiler"],
          "required": true,
          "failureMode": "error"
        }
      ]
    }
  }
}
